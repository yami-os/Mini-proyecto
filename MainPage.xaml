<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="Black">
             
    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="10"
            VerticalOptions="Center">

            <Label Text="Calculadora"
               TextColor="White"
               FontSize="20"
               HorizontalOptions="Start"
               FontAttributes="Bold"
               Margin="0,30,0,10"/>

            <Label x:Name="Resultados"
                Text="0"
                TextColor="White"
                BackgroundColor="Black"
                FontSize="36"
                HorizontalTextAlignment="End"
                HeightRequest="70"
                LineBreakMode="NoWrap"/>
            <Label x:Name="Operacion"
               Text=""
               TextColor="Gray"
               FontSize="18"
               HorizontalTextAlignment="End"
               Margin="0,0,0,5"/>

            <!--Botones-->
            <Grid RowSpacing="20" ColumnSpacing="10" Margin="0,50,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
            <!--Botones para las operaciones :b -->
                <Button Text="AC" Grid.Row="0" Grid.Column="0" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnLimpiarClicked" FontSize="20"/>
                <Button Text="7" Grid.Row="1" Grid.Column="0" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="4" Grid.Row="2" Grid.Column="0" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="1" Grid.Row="3" Grid.Column="0" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="≡" Grid.Row="4" Grid.Column="0" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="⌫" Grid.Row="0" Grid.Column="1" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnBorrarClicked" FontSize="20"/>
                <Button Text="8" Grid.Row="1" Grid.Column="1" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="5" Grid.Row="2" Grid.Column="1" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="2" Grid.Row="3" Grid.Column="1" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="0" Grid.Row="4" Grid.Column="1" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="%" Grid.Row="0" Grid.Column="2" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnPorcentajeClicked" FontSize="20"/>
                <Button Text="9" Grid.Row="1" Grid.Column="2" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="6" Grid.Row="2" Grid.Column="2" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="3" Grid.Row="3" Grid.Column="2" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnNumeroClicked" FontSize="20"/>
                <Button Text="." Grid.Row="4" Grid.Column="2" BackgroundColor="#1E1E1E" TextColor="White" Clicked="OnPuntoClicked" FontSize="20"/>
                <Button Text="÷" Grid.Row="0" Grid.Column="3" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnOperadorClicked" FontSize="20"/>
                <Button Text="×" Grid.Row="1" Grid.Column="3" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnOperadorClicked" FontSize="20"/>
                <Button Text="−" Grid.Row="2" Grid.Column="3" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnOperadorClicked" FontSize="20"/>
                <Button Text="+" Grid.Row="3" Grid.Column="3" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnOperadorClicked" FontSize="20"/>
                <Button Text="=" Grid.Row="4" Grid.Column="3" BackgroundColor="#1E1E1E" TextColor="Orange" Clicked="OnIgualClicked" FontSize="20"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>